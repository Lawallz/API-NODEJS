datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  carts    Cart[]
}

model Cart {
  id        Int    @id @default(autoincrement())
  userId    Int
  product   String
  quantity  Int

  user User @relation(fields: [userId], references: [id])
}

